<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="medicalclinicproject.MainPageController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnUserPage" mnemonicParsing="false" onAction="#loadUserPage" prefHeight="25.0" prefWidth="86.0" text="Users" />
            <Button fx:id="btnPrescrptionPage" mnemonicParsing="false" onAction="#loadPrescrtionPage" prefHeight="25.0" prefWidth="88.0" text="Prescrption" />
            <Button fx:id="btnReportPage" mnemonicParsing="false" onAction="#loadReportPage" prefHeight="25.0" prefWidth="88.0" text="Reports" />
            <Button fx:id="btnstockPage" mnemonicParsing="false" onAction="#loadStockPage" prefHeight="25.0" prefWidth="88.0" text="Stock" />
            <Button fx:id="btnvasPage" mnemonicParsing="false" onAction="#loadVASPage" prefHeight="25.0" prefWidth="91.0" text="Value Added" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <AnchorPane fx:id="middleAnch" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
